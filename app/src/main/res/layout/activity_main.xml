<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brightColor"
    tools:context="com.example.deepanshuaggarwal.crazycalculator.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text=""
        android:layout_weight="1"
        android:textSize="35dp"
        android:id="@+id/expression"
        android:textColor="#010000"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/bestColor">
        <Button
            android:id="@+id/one"
            android:tag="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:layout_weight="1"
            android:background="@color/bestColor"
            android:textColor="@color/brightColor"
            android:textSize="40sp"
           />
        <Button
            android:id="@+id/two"
            android:tag="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="2"
            android:layout_weight="1"
            android:background="@color/bestColor"
            android:textColor="@color/brightColor"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/three"
            android:tag="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="3"
            android:layout_weight="1"
            android:background="@color/bestColor"
            android:textColor="@color/brightColor"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/del"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="DEL"
            android:layout_weight="1"
            android:background="@color/greeni"
            android:textColor="@color/brightColor"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/clear"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="C"
            android:layout_weight="1"
            android:background="@color/greeni"
            android:textColor="@color/brightColor"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/bestColor">
        <Button
            android:id="@+id/four"
            android:tag="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="4"
            android:layout_weight="1"
            android:background="@color/bestColor"
            android:textColor="@color/brightColor"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/five"
            android:tag="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="5"
            android:layout_weight="1"
            android:background="@color/bestColor"
            android:textColor="@color/brightColor"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/six"
            android:tag="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="6"
            android:layout_weight="1"
            android:background="@color/bestColor"
            android:textColor="@color/brightColor"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="+"
            android:layout_weight="1"
            android:background="@color/greeni"
            android:textColor="@color/brightColor"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="-"
            android:layout_weight="1"
            android:background="@color/greeni"
            android:textColor="@color/brightColor"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/bestColor">
        <Button
            android:id="@+id/seven"
            android:tag="7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="7"
            android:layout_weight="1"
            android:background="@color/bestColor"
            android:textColor="@color/brightColor"
            android:textSize="40sp"/>

        <Button

            android:id="@+id/eight"
            android:tag="8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bestColor"
            android:text="8"
            android:textColor="@color/brightColor"
            android:textSize="40sp" />

        <Button
            android:id="@+id/nine"
            android:tag="9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="9"
            android:layout_weight="1"
            android:background="@color/bestColor"
            android:textColor="@color/brightColor"
            android:textSize="40sp"/>

        <Button

            android:id="@+id/into"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="*"
            android:layout_weight="1"
            android:background="@color/greeni"
            android:textColor="@color/brightColor"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/divide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="/"
            android:layout_weight="1"
            android:background="@color/greeni"
            android:textColor="@color/brightColor"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/bestColor"
        >
        <Button
            android:id="@+id/dot"
            android:tag="."
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="."
            android:layout_weight="1"
            android:background="@color/bestColor"
            android:textColor="@color/brightColor"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/zero"
            android:tag="0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:layout_weight="1"
            android:background="@color/bestColor"
            android:textColor="@color/brightColor"
            android:textSize="40sp"/>
        <Button
        android:id="@+id/obr"
        android:tag="pie"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="("
        android:layout_weight="0.5"
        android:background="@color/bestColor"
        android:textColor="@color/brightColor"
        android:textSize="20sp"/>
        <Button
            android:id="@+id/cbr"
            android:tag="pie"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=")"
            android:layout_weight="0.5"
            android:background="@color/bestColor"
            android:textColor="@color/brightColor"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/power"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="^"
            android:layout_weight="1"
            android:background="@color/greeni"
            android:textColor="@color/brightColor"/>
        <Button
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="="
            android:layout_weight="1"
            android:background="@color/greeni"
            android:textColor="@color/brightColor"/>

    </LinearLayout>
</LinearLayout>
